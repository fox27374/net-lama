{
    "openapi": "3.0.0",
    "info": {
      "version": "1.0.0",
      "title": "SensorPi API",
      "description": "API for the basic communication with SensorPi clients"
    },
    "paths": {
      "/api/v1/configs/{section}": {
        "get": {
          "tags": [
            "Config"
          ],
          "description": "Returns the whole SensorPi config",
          "parameters": [
            {
              "in": "path",
              "name": "section",
              "required": true,
              "description": "config section",
              "schema": {
                "type": "string",
                "example": "MQTT"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Desired configuration in JSON format",
              "content": {
                "text/plain": {
                  "schema": {
                    "type": "object",
                    "example": {
                      "commandTopic": "sensorpi/command",
                      "dataTopic": "sensorpi/data",
                      "logTopic": "sensorpi/log",
                      "mqttPort": "1883",
                      "mqttServer": "0.0.0.0"
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Not found",
              "content": {
                "text/plain": {
                  "schema": {
                    "type": "object",
                    "example": {
                      "error": "Not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }